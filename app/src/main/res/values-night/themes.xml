<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BluetoothLESpam" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_normal</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_normal</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/grey_normal</item>
        <!-- Customize your theme here. -->
        <item name="seekbarBackground">@color/grey_normal</item>
        <item name="seekbarProgress">?attr/colorPrimary</item>
        <item name="seekbarSecondaryProgress">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BluetoothLESpam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ACTION BAR -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/foreground_color_action_bar</item>
    </style>
    <style name="ActionButton.Overflow.Icon" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/settings</item>
        <item name="color">@color/foreground_color_action_bar</item>
        <item name="tint">@color/foreground_color_action_bar</item>
    </style>
    <style name="Theme.BluetoothLESpam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.Icon</item>
    </style>

    <style name="Theme.BluetoothLESpam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>